name: Build APK Factory
on:
  repository_dispatch:
    types: [build_app]

jobs:
  build:
    name: "Building Your Custom Web App"
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code
        uses: actions/checkout@v4

      - name: Setup Java
        uses: actions/setup-java@v4
        with:
          java-version: '17'
          distribution: 'temurin'

      - name: Setup Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: '3.10.0'
          channel: 'stable'

      - name: Create Custom App Code
        run: |
          # هنا بنبرمج التطبيق يفتح الموقع اللي إنت طلبته
          echo "import 'package:flutter/material.dart';
          import 'package:webview_flutter/webview_flutter.dart';
          void main() => runApp(MaterialApp(home: WebViewPage()));
          class WebViewPage extends StatelessWidget {
            @override
            Widget build(BuildContext context) {
              return Scaffold(body: SafeArea(child: WebView(initialUrl: '${{ github.event.client_payload.description }}', javascriptMode: JavascriptMode.unrestricted)));
            }
          }" > lib/main.dart

      - name: Get Dependencies
        run: |
          flutter pub add webview_flutter
          flutter pub get

      - name: Build APK
        run: flutter build apk --release

      - name: Upload APK Result
        uses: actions/upload-artifact@v4
        with:
          name: ${{ github.event.client_payload.app_name }}
          path: build/app/outputs/flutter-apk/app-release.apk
