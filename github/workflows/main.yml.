name: Build APK Factory
on:
  repository_dispatch:
    types: [build_app]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-java@v4
        with:
          java-version: '17'
          distribution: 'temurin'
      - uses: subosito/flutter-action@v2
        with:
          flutter-version: '3.10.0'
      
      - name: Create App
        run: |
          # كود بسيط عشان التطبيق يفتح ويشتغل فوراً بالاسم اللي اخترته
          echo "import 'package:flutter/material.dart';
          void main() => runApp(MaterialApp(home: Scaffold(body: Center(child: Text('تطبيق محمد: ${{ github.event.client_payload.app_name }}')))));" > lib/main.dart
          flutter pub get
          flutter build apk --release

      - name: Upload
        uses: actions/upload-artifact@v4
        with:
          name: ${{ github.event.client_payload.app_name }}
          path: build/app/outputs/flutter-apk/app-release.apk
